<!doctype html>
<html lang="en">
  <head>
   
    <%- include('../snippets/meta_data.ejs')  %> 
    <!-- custom css -->
    <title>Xpresscoins | World Best Mining Company</title>
    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" rel="stylesheet">
    
    <!-- Icon CDN -->
    <script src="https://unpkg.com/feather-icons"></script>

  </head>
  <body class="">
    
    <!-- Include navbar -->
    <%- include('../snippets/main_navbar.ejs') %> 

    <div class="container-fluid" >
      <div class="row">

            <!-- Include sidebar -->
            <%- include('../snippets/sidebar.ejs') %> 

            <% var context; %> 
            
            <!-- Start 2nd row -->
            <div class="table-responsive row " >

              <div class="col-lg-6 col-md-12 col-sm-12 mx-auto">

                <div class="card mb-4 rounded-3 shadow card-stat withdrawal_div">
                  <div class="card-body">
                  <h6 class="card-title text-start text-dark">Reinvestment </h6>

                    <form id="reinvet_form">
                      <div class="row mt-4">
                        <div class="col">
                          
                          <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="text" name="amount" class="form-control form-control-md" 
                            placeholder="Amount" required>
                          </div>
                          <div class="text-danger mt-2" id="amountErr"></div>

                          <div class="text-center mb-3">
                            <small class="text-dark me-5">Amount in dollar 5000 </small>
                            <small class="text-muted">Available balance <span class="text-dark fw-bold">$<%= context.wallet_balance %></span> </small>
                          </div>
                        </div>
                        
                      </div>
                      
                      <div class="text-center mt-4 mb-3">
                        <button type="submit" class="btn btn-outline-warning btn-md">
                          Confirm reinvestment
                        </button> 
                      </div>
                    </form>
                     
                  </div>
                </div>
              </div>
            </div>
            <!-- End 2nd row -->

        </main>
      </div>
    </div>


    <!--  Include toast -->
    <%- include('../snippets/toast.ejs') %> 

    <!-- Include the scripts -->
    <%- include('../snippets/scripts.ejs') %>


    <!-- INitialized feather CDN -->
    <script>
      feather.replace();
    </script>

    <script src="/scripts/reinvest.js"></script>

    <script src="//code.tidio.co/myhyjgkaknoinoz3ygfgyds6hw6lcqyb.js" async></script>
    

  <!-- Live chat -->
  <%- include('../snippets/live_chat.ejs') %>

  </body>
</html>
