<!doctype html>
<html lang="en">
  <head>
   
    <!-- Include the header -->
    <%- include('../snippets/meta_data.ejs')  %> 

    <title>Xpresscoins | World Best Mining Company</title>
    
    <!-- Custom styles for this template -->
    <link href="/css/dashboard.css" rel="stylesheet">
    
    <!-- Icon CDN -->
    <script src="https://unpkg.com/feather-icons"></script>

    <!-- Data table cdn -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.0/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.js"></script>
   
  </head>
  <body>
    
    <!-- Include navbar -->
    <%- include('../snippets/main_navbar.ejs') %> 

    <div class="container-fluid" >
      <div class="row">

        <% var context; %> 

        <!-- Include sidebar -->
        <%- include('../snippets/sidebar.ejs') %> 
            <h5 class="text-start h6 text-center">Edit Wallet</h5>
            <!-- First row -->
            <div class="table-responsive row card-stat p-4">
                <div class="col-lg-6 col-md-12 col-sm-12 mx-auto">
                  
                  <% if (context.user) { %>
                    <form id="edit_balance_form">
                          <div class="col">
                            <label class="">Name</label>
                            <input type="text" name="name" class="form-control" value="<%= context.user.user.full_name %>" >
                            <div class="text-danger mt-2" id="walletErr"></div>
                          </div>

                          <div class="col">
                            <label class="">Username</label>
                            <input type="text" name="name" class="form-control" value="<%= context.user.user.username %>" >
                            <div class="text-danger mt-2" id="walletErr"></div>
                          </div>

                          <div class="col">
                            <label class="">Email Address</label>
                            <input type="text" name="name" class="form-control" value="<%= context.user.user.email %>" readonly>
                            <div class="text-danger mt-2" id="walletErr"></div>
                          </div>

                          
                          <div class="col">
                            <input type="hidden" name="wallet_id" class="form-control " value="<%= context.user._id %>" >
                          </div>

                          <div class="col">
                            <label class="">Wallet Balance</label>
                            <input type="text" name="balance" class="form-control " value="<%= context.user.balance %>" >
                            <small class="text-warning fw-bold">Add money directly to the user wallet </small>
                            <div class="text-danger mt-2" id="balanceErr"></div>
                          </div>

                          <div class="col">
                            <label class="">Comment</label>
                            <textarea name="comment" class="form-control" placeholder="Write your comment" cols="50" rows="5"></textarea>
                            <div class="text-danger mt-2" id="walletErr"></div>
                          </div>
                        
                        <div class="text-center mt-4 mb-3">
                        <button type="submit" class="btn btn-outline-warning btn-md">Save Changes</button> 
                        </div>
                    </form>
                  <% } %>
                </div>
        </main>
      </div>
    </div>


    <!-- Include toast -->
    <%- include('../snippets/toast.ejs') %>

    <!-- Include the scripts -->
    <%- include('../snippets/scripts.ejs') %>


    <!-- INitialized feather CDN -->
    <script>
      feather.replace()
    </script>

   <!-- Link the submit handler -->
   <script src="/scripts/edit_user_balance.js"></script>


  </body>
</html>
